# ===== 登录模式配置 =====
# 是否启用SSO登录（true=跳转SSO服务器登录，false=使用本地登录）
REACT_APP_ENABLE_SSO=false

# ===== SSO服务器配置 =====
# SSO服务器地址（启用SSO时使用）
REACT_APP_SSO_BASE_URL=https://885ro126ov70.vicp.fun

# ===== OAuth2/PKCE配置 =====
# 是否启用PKCE（Proof Key for Code Exchange）
REACT_APP_ENABLE_PKCE=true

# OAuth2客户端ID
REACT_APP_OAUTH2_CLIENT_ID=webapp-client

# OAuth2回调地址
REACT_APP_OAUTH2_REDIRECT_URI=http://localhost:3000/callback

# OAuth2授权范围
REACT_APP_OAUTH2_SCOPE=read write openid profile offline_access

# PKCE挑战方法（S256=SHA256）
REACT_APP_OAUTH2_CODE_CHALLENGE_METHOD=S256

# ===== API服务器配置 =====
# 认证API地址（用于登录、token刷新等）
REACT_APP_AUTH_BASE_URL=https://885ro126ov70.vicp.fun

# 业务API地址（用于用户管理、权限管理等）
REACT_APP_API_BASE_URL=http://localhost:9001

# ===== 第三方登录配置 =====
# 是否启用第三方登录按钮
REACT_APP_ENABLE_THIRD_PARTY_LOGIN=true

# 支持的第三方平台（逗号分隔）
REACT_APP_SUPPORTED_PLATFORMS=wechat,github,alipay

# ===== 其他配置 =====
# 应用端口
PORT=3000

# 是否在浏览器中自动打开
BROWSER=true

# 是否生成source map
GENERATE_SOURCEMAP=true